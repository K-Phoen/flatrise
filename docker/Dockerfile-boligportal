# build stage
FROM golang:1.11-alpine3.8 as build-env

COPY ./flatrise /build

RUN apk add --no-cache git gcc musl-dev

RUN cd /build/cmd/boligportal.dk && go build -v -o worker

# final stage
FROM alpine:3.8

WORKDIR /app

RUN apk add --no-cache bash ca-certificates
COPY ./docker/wait-for-it.sh /docker/

COPY --from=build-env /build/cmd/boligportal.dk/worker /app/

CMD ["/app/worker"]
